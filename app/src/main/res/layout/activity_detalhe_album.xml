<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.DetalheAlbumActivity">

    <ImageView
        android:id="@+id/album_image_src"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:padding="5dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <!-- ================== -->

    <TextView
        android:id="@+id/txtv_album_nome_album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/album_image_src"
        android:layout_margin="10dp"
        android:text="Nome: " />

    <TextView
        android:id="@+id/txtv_album_nome_album_imp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_toRightOf="@id/txtv_album_nome_album" />

    <!-- ================== -->

    <TextView
        android:id="@+id/txtv_album_nome_artista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtv_album_nome_album"
        android:layout_margin="10dp"
        android:text="Artista: " />

    <TextView
        android:id="@+id/txtv_album_nome_artista_imp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtv_album_nome_album_imp"
        android:layout_margin="10dp"
        android:layout_toRightOf="@id/txtv_album_nome_album" />


    <!-- ================== -->

    <TextView
        android:id="@+id/txtv_album_duracao_album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtv_album_nome_artista"
        android:layout_margin="10dp"
        android:text="Artista: " />

    <TextView
        android:id="@+id/txtv_album_duracao_album_imp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtv_album_nome_artista_imp"
        android:layout_margin="10dp"
        android:layout_toRightOf="@id/txtv_album_duracao_album" />

    <!-- ================== -->

    <TextView
        android:id="@+id/txtv_album_numero_fans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtv_album_duracao_album"
        android:layout_margin="10dp"
        android:text="Número de fãns: " />

    <TextView
        android:id="@+id/txtv_album_numero_fans_imp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtv_album_duracao_album_imp"
        android:layout_margin="10dp"
        android:layout_toRightOf="@id/txtv_album_numero_fans" />

    <!-- ================== -->

    <TextView
        android:id="@+id/txtv_album_numero_musicas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtv_album_numero_fans"
        android:layout_margin="10dp"
        android:text="Número de fãns: " />

    <TextView
        android:id="@+id/txtv_album_numero_musicas_imp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtv_album_numero_fans_imp"
        android:layout_margin="10dp"
        android:layout_toRightOf="@id/txtv_album_numero_musicas" />

    <!-- ================== -->

    <ListView
        android:id="@+id/musica_album_listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtv_album_numero_musicas"
        android:layout_marginTop="10dp"></ListView>

</RelativeLayout>